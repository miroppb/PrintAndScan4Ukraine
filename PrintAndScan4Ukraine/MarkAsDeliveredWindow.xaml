<Window x:Class="PrintAndScan4Ukraine.MarkAsDeliveredWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrintAndScan4Ukraine"
        mc:Ignorable="d"
        Title="{Tr 'PAS4U.ScanDeliveredWindow.Title', DefaultText='Scan Arrived Window'}" Height="400" Width="500" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="/barcode.png">
    <Grid>
        <TextBlock x:Name="LblCodes" Text="{Tr 'PAS4U.ScanShippedWindow.BarcodesScanned', {Binding barCodes.Count}, DefaultText='Barcodes Scanned...'}" HorizontalAlignment="Center" />
        <TextBlock Text="{Tr 'PAS4U.ScanDeliveredWindow.TopText', DefaultText='Scan Barcodes that were delivered'}" TextWrapping="Wrap" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="50" TextAlignment="Center" />
        <Button x:Name="BtnDone" Content="{Tr 'PAS4U.ScanShippedWindow.DoneText', DefaultText='Done'}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" Margin="0,310,0,0" Click="BtnDone_Click" />
    </Grid>
</Window>
