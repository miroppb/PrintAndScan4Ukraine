<Window x:Class="PrintAndScan4Ukraine.MarkAsShippedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrintAndScan4Ukraine"
        mc:Ignorable="d"
        Title="ScannerWindow" Height="400" Width="500" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="/barcode.png">
    <Grid>
        <TextBlock x:Name="LblCodes" Text="Barcodes scanned: " HorizontalAlignment="Center" />
        <TextBlock Text="Scan Barcodes to&#x0a;Mark As Shipped..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" TextAlignment="Center" />
        <Button x:Name="BtnDone" Content="Done" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" Margin="0,310,0,0" Click="BtnDone_Click" />
    </Grid>
</Window>
