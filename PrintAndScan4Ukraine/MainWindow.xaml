<Window x:Class="PrintAndScan4Ukraine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Icon="/barcode.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*"  />
        </Grid.ColumnDefinitions>

        <Button x:Name="BtnPrint" Grid.Column="0" Content="Print" Click="BtnPrint_Click" FontSize="40" FontWeight="Bold" />
        <Button x:Name="BtnScan" Grid.Column="1" Content="Scan" Click="BtnScan_Click" FontSize="40" FontWeight="Bold" />

    </Grid>
</Window>
